<Window x:Class="SpellCheckDbTable.Views.EditIgnoreListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="EditIgnoreListView" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding IgnoreList}" MinHeight="200" MinWidth="200" VerticalScrollBarVisibility="Auto" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" cal:Message.Attach="SaveIgnoreList" Padding="5" Margin="5"/>
                <Button Content="Close" cal:Message.Attach="Close" Padding="5" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
